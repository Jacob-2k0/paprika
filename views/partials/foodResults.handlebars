{{#each foodResults}}

  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
            <p>
              <strong>Name</strong>: {{name}}</p>
            <!-- Button trigger modal -->
            <button id="viewModal" data-foodID="{{foodID}}" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
              View
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Nutrition Information</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                    <!--Display Name, Calories, Protien, Sugar, Fat, Carbs-->
                  <div class="modal-body">
                      <p>
                        <strong id="calories{{foodID}}" data-calories="{{calories}}" class="{{foodID}}">Calories:</strong></p>
                      <p>
                        <strong id="protien{{foodID}}" data-protien="{{protien}}" class="{{foodID}}">Protein:</strong></p>
                      <p>
                        <strong id="sugar{{foodID}}" data-sugar="{{sugar}}" class="{{foodID}}">Sugar:</strong></p>
                      <p>
                        <strong id="fat{{foodID}}" data-fat="{{fat}}" class="{{foodID}}">Fat:</strong></p>
                      <p>
                        <strong id="carbs{{foodID}}" data-carbs="{{carbs}}" class="{{foodID}}">Carbs:</strong></p>
                  </div>
                  <div class="modal-footer">
                    <button id="addToCart" type="button" class="btn btn-primary" data-dismiss="modal">Add To Cart</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            
                  </div>
                </div>
              </div>
            </div>
            <!-- End of Modal --> 

          </div>
        </div>
      </div>
    

{{/each}}
