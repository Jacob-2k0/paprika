<div id="home">
        <div class="container">
          <div class="jumbotron"> 
          <h1>Calories Counter</h1>
            <i class='fas fa-bread-slice' style='font-size:36px'></i>
            <i class='fas fa-bacon' style='font-size:36px'></i>
            <i class='fas fa-egg' style='font-size:36px'></i>  
            <i class='fas fa-cheese' style='font-size:36px'></i>
            <i class='fas fa-hamburger' style='font-size:36px'></i>
            <i class='fas fa-pizza-slice' style='font-size:36px'></i>
            <i class='fas fa-pepper-hot' style='font-size:36px'></i>
        </div>

  <section class = "main-section">      
    <!--Row 1: Search Food-->
		<div class="row">
			<div class="col-md-12">
				<div class="food-container">

					<table class="table table-striped">
						<thead>
							<tr>
								<th>Search Food</th>
							</tr>
						</thead>
						<tbody>
							<tr id="form-row">
								<form id="food-form">
									<td colspan="4">
										<input placeholder="Enter your food" id="food-name" type="text" />
									</td>
									<td><button id="submitButton" type="submit" class="btn btn-success">Search Food</button>
									</td>
								</form>
							</tr>
              <tr>
                <td>
                    <td><div>
                      {{> foodResults}}
                    </td></div>  
                </td>
              </tr>
						</tbody>
					</table>

				</div>
			</div>
		</div>
         
    <!--Row 2: Select a Food-->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                      <th>Select Food</th>
                    </tr>
                </thead>
                <tbody>
                <hr>
                  <tr>
                    <td><div id="test">
                      {{> recent}}
                    </td></div>  
                  </tr>
                </tbody>
            </table>

        </div>
    </div>

  </section>   

</div>
      
      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="/js/index.js"></script>
