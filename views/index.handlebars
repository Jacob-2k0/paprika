<div class="container">	

	  <div class="jumbotron"> 
    <h1>Calories Counter</h1>
    <i class='fas fa-bread-slice' style='font-size:36px'></i>
    <i class='fas fa-bacon' style='font-size:36px'></i>
    <i class='fas fa-egg' style='font-size:36px'></i>  
		<i class='fas fa-cheese' style='font-size:36px'></i>
    <i class='fas fa-hamburger' style='font-size:36px'></i>
    <i class='fas fa-pizza-slice' style='font-size:36px'></i>
    <i class='fas fa-pepper-hot' style='font-size:36px'></i>
    </div>

<div class="row">
		<div class="col-md-4 col-md-offset-1">
      <h2>Food to be put in the grocery list</h2>

			<div class="panel-panel default">
          <ul>
            {{#each foods}}
              {{#unless checkout}}
                {{> foods/food-block checkout=true}}
              {{/unless}}
            {{/each}}
          </ul>
       </div>
	  </div>       

  <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <h2>Food to be emailed to the user</h2>
        
        <div class="panel panel-default">
            
            <ul>
              {{#each foods}}
                {{#if checkout}}
                  {{> foods/food-block checkout=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
    </div>
  </div>          

  <div class="col-md-10 col-md-offset-1">
      <h2>Add a Food:</h2>
      <form class="add-food">

        <div class="form-group">
          <label for="ca">Food Name</label>
          <input type="text" id="ca" name="name">
          <input type="hidden" name="checkout" value="0">
        </div>

        <button class="btn btn-primary btn-lg"type="submit">Add Food</button>
      </form>
  </div>

</div>